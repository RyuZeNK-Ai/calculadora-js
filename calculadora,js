function sumar(a, b) {
  return a + b;
} 
function restar(a, b) {
  return a - b;
}
function multiplicar(a, b) {
  return a * b;
}
function dividir(a, b) {
  if (b === 0) {
        return "Error: no se puede dividir por cero";
    }
    return a / b;
}
function modulo(a, b) {
  if (b === 0) {
        return "Error: no se puede dividir por cero";
    }
    return a % b;
}
function potencia(a, b) {
  return a ** b;
}
function raiz_n_esima(a, b) {
    // Si es una ra√≠z par y el n√∫mero es negativo ‚Üí error matem√°tico
    if (a < 0 && b % 2 === 0) {
        return "Error: no se puede calcular ra√≠z par de un n√∫mero negativo";
    }
    return a ** (1 / b);
}

function menu() {
    console.log("=== Men√∫ de inicio ===");
    console.log("1. Sumar");
    console.log("2. Restar");
    console.log("3. Multiplicar");
    console.log("4. Dividir");
    console.log("5. M√≥dulo");
    console.log("6. Potencia");
    console.log("7. Ra√≠z cuadrada");
    console.log("8. Ra√≠z c√∫bica");
    console.log("9. Salir");
}

function calculadora() {
      while (true) 
        console.log(menu());
        opcion = 2

        switch (opcion) { 
            case '1' | '2' | '3' | '4' | '5' | '6':
                try:
                    a = float(input("Ingrese el primer n√∫mero: "))
                    b = float(input("Ingrese el segundo n√∫mero: "))
                except ValueError:
                    print("‚ùå Error: entrada no v√°lida.")
                    continue
        }

                switch (opcion) {
                    case 1:
                       resultado = sumar(a, b)
                    case 2: 
                       resultado = restar(a, b)
                    case 3: 
                       resultado = multiplicar(a, b)
                    case 4: 
                       resultado = dividir(a, b)
                    case 5: 
                       resultado = modulo(a, b)
                    case 6: 
                       resultado = potencia(a, b)

            case '7':  # Ra√≠z cuadrada
                try:
                    a = float(input("Ingrese el n√∫mero: "))
                    resultado = raiz_cuadrada(a)
                except ValueError:
                    resultado = "‚ùå Error: entrada no v√°lida."

            case '8':  # Ra√≠z n-√©sima
                try:
                    a = float(input("Ingrese el n√∫mero: "))
                    n = float(input("Ingrese el valor de n (orden de la ra√≠z): "))
                    resultado = raiz_n_esima(a, n)
                except ValueError:
                    resultado = "‚ùå Error: entrada no v√°lida."

            case '9':
                print("üëã ¬°Gracias por usar la Calculadora PRO! Hasta luego.")
                break

            case _:
                print("‚ö†Ô∏è Opci√≥n no v√°lida. Intente nuevamente.")
                continue

        print(f"‚úÖ Resultado: {formatear_resultado(resultado)}")
}

console.log(menu())
console.log(raiz_n_esima(2,2));